<% include ./partials/homenav %>
<div class="row mb-5" style="margin-top: 7rem">
  <div class="col-md-6 m-auto">
    <div class="card card-body bg-info text-white">
      <h1 class="text-center mb-3 text-white">
        <i class="fas fa-sign-in-alt"></i> Admin Login
      </h1>
      <% include ./partials/messages %>
      <form action="/admin/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control px-3 rounded"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control rounded px-3"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-white btn-block text-white">
          Login
        </button>
      </form>
      <p class="lead mt-4">
        No Account?<a class="text-warning" href="/admin/register"> register</a>
      </p>
    </div>
  </div>
</div>
