<% users.forEach(user => { %>
  <% 
    user.amount === '0' ? user.amount = ' ' : user.amount = `₦${user.amount}`;
    if(!user.status) {
      user.pledge.pledgeType = 'N/A';
      user.deadline = 'N/A';
      user.status = 'None';
    }
  %>
  <tr>
    <td><b><%= user.name %></b></td>
    <td><%= user.email %></td>
    <td><b><%= user.pledge.pledgeType %></b></td>
    <td><%= user.status %></td>
    <%
      let sign;
      user.pledge.pledgeType === 'bitcoin' ? sign = '$' : sign = '₦';
      if (user.status === 'None') {
        sign = '';
      }
    %> 
    <td><b><%= sign %><%= formatAmount(user.amount) %></b></td>
    <td><%= sign %><%= formatAmount(user.expectedFunds.statistics.matched) %></td>
    <td><b><%= user.deadline %></b></td>
  </tr>
<% }) %>