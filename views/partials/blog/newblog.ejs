<body>
  <div style="margin-top: 7rem" class="container-fluid mb-3 shadow-lg">
    <div
      class="card text-light bg-secondary mb-3 m-auto"
      style="max-width: 60rem"
    >
      <h1 class="card-header text-center">Post A New Blog Article</h1>
      <div class="card-body p-3">
        <div className="container-fluid m-auto ">
          <form
            method="post"
            action="/blog"
            id="form"
            class="p-3 text-light form-group"
          >
            <div class="form-group">
              <label for="title">Title</label>
              <input
                type="text"
                name="title"
                class="form-control text-dark"
                id="title"
                value="<%= blog.title %>"
              />
            </div>
            <div class="form-group">
              <label for="image">Header image</label>
              <input
                type="text"
                name="image"
                class="form-control text-dark"
                id="image"
                value="<%= blog.image %>"
              />
            </div>
            <div class="form-group">
              <label for="description">description</label>
              <textarea
                id="content"
                name="description"
                class="form-control text-dark"
                id="description"
                rows="3"
              >
              <%= blog.description %>
              </textarea>
            </div>
            <div class="form-group">
              <label for="markdown">Markdown</label>
              <textarea
                id="content"
                name="markdown"
                class="form-control text-dark"
                id="markdown"
                rows="4"
                required
              >
              <%= blog.markdown %>
              </textarea>
            </div>
            <input type="submit" value="Add Blog" class="btn btn-primary" />
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
